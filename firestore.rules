rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Resumes - users can only access their own resumes
    match /resumes/{resumeId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Job applications - users can only access their own applications
    match /jobApplications/{jobId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Cover letters - users can only access their own cover letters
    match /coverLetters/{coverLetterId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.userId;
    }
    
    // Usage analytics - read-only for authenticated users
    match /usage_analytics/{docId} {
      allow read: if request.auth != null;
      allow write: if false; // Only written by Firebase Functions
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 